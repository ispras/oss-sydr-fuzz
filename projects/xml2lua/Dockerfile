ARG BASE_IMAGE="sydr/ubuntu22.04-sydr-fuzz"
FROM $BASE_IMAGE

RUN git clone https://github.com/manoelcampos/xml2lua.git && cd xml2lua && \
    git checkout 054dea34d77bc53762331d1cc5026c66d87de768 && luarocks build

RUN mkdir /corpus
COPY input /corpus/

WORKDIR /
