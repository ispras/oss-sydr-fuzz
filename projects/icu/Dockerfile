FROM sweetvishnya/ubuntu20.04-sydr-fuzz

RUN apt-get update && apt-get install -y make \
        python3 zip software-properties-common

# Clone project from GitHub.
RUN git clone https://github.com/unicode-org/icu.git && \
    cd icu && git checkout b0ab1171ad3c577325c878e40c2c8cdce1354f60

# Build targets.
COPY build.sh \
     main.c \
     *toml \
     collator_compare_fuzzer.cpp \
     *_sydr.cpp \
     /
RUN ./build.sh
